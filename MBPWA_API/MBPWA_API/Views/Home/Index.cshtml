        function GetAllClasses() {
            $('#car-class').empty();
            $('#car-class').append('<option value="" selected disabled>Select Class</option>');
            $.ajax({
                url: '@Url.Action("GetClasses", "Packages")',
                method: 'GET',
                success: response => {
                    if (response.data && response.data.length) {
                        response.data.forEach(j => {

                            var node = $(`<option value=${j.Id}>${j.ClassName}</option>`);

                            $('#car-class').append(node);
                        });
                    }
                }
            });
        }

        function GetClassModel() {

            disablePackagesPlans();


            var ClassId = $('#car-class').val();
            $('#car-model').empty();
            $('#car-model').append('<option value="" selected disabled>Select Model</option>');
            $('#car-package').empty();
