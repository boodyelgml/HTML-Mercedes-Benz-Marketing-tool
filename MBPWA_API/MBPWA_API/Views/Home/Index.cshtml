    function GetPackageModel() {
        var ModelId = $('#car-model').val();
        $('#car-package').empty();
        $('#car-package').append('<option value="" selected disabled>Select Package</option>');
        $.ajax({
            url: '@Url.Action("GetPackages", "Packages")?modelId=' + ModelId,
